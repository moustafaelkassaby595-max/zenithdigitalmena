---
import Layout from '../../layouts/Layout.astro';

const posts = [
  {
    title: 'Why “practical AI” beats hype for SMEs in MENA',
    date: '2025-12-14',
    description: 'A simple framework for choosing AI projects that actually reduce cost, time, and risk.',
    slug: 'practical-ai-for-smes-mena',
  },
];
---

<Layout>
  <section class="mx-auto max-w-6xl px-6 py-16">
    <h1 class="text-4xl md:text-5xl font-semibold tracking-tight">Blog</h1>
    <p class="mt-4 max-w-2xl text-white/75">
      Insights on product, branding, web, and practical AI—focused on outcomes.
    </p>

    <div class="mt-10 grid grid-cols-1 gap-4">
      {posts.map((p) => (
        <a
          href={`/blog/${p.slug}`}
          class="rounded-2xl border border-white/10 p-6 hover:border-white/20 transition"
        >
          <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-sm text-white/60">
            <span>{p.date}</span>
            <span>•</span>
            <span>Zenith</span>
          </div>
          <h2 class="mt-3 text-xl font-semibold tracking-tight">{p.title}</h2>
          <p class="mt-2 text-sm text-white/70">{p.description}</p>
          <div class="mt-4 text-sm text-white/70">Read →</div>
        </a>
      ))}
    </div>
  </section>
</Layout>

