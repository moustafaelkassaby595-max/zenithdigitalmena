---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Brand + Website Launch',
    tag: 'Launch',
    description:
      'Minimal identity uplift and a high-performance marketing site built for conversion and SEO.',
    outcomes: ['Modern visual system', 'Fast, SEO-ready build', 'Clear messaging'],
  },
  {
    title: 'Product MVP + Iteration',
    tag: 'Build',
    description:
      'Rapid prototyping to production, with tight feedback loops and clean engineering.',
    outcomes: ['UX flows & UI kit', 'Front-end build', 'Integrations + QA'],
  },
  {
    title: 'Growth + Conversion Uplift',
    tag: 'Improve',
    description:
      'Funnel clarity, landing page improvements, and content foundations for sustainable growth.',
    outcomes: ['CRO quick wins', 'Analytics clarity', 'SEO content plan'],
  },
  {
    title: 'AI Operations Automation',
    tag: 'Automate',
    description:
      'Practical AI workflows that reduce manual work and speed up internal operations.',
    outcomes: ['Automation prototypes', 'Knowledge + search', 'Low-risk rollout'],
  },
];
---

<Layout>
  <section class="relative overflow-hidden">
    <!-- Subtle background visuals -->
    <div class="pointer-events-none absolute inset-0">
      <div class="absolute -top-24 -left-24 h-72 w-72 rounded-full bg-white/5 blur-3xl"></div>
      <div class="absolute top-32 -right-24 h-72 w-72 rounded-full bg-white/5 blur-3xl"></div>
      <div class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
    </div>

    <div class="mx-auto max-w-6xl px-6 pt-16 pb-10 relative">
      <p class="text-sm text-white/60 tracking-wide reveal">
        Selected work • Experience • Outcomes
      </p>

      <h1 class="mt-5 text-4xl md:text-6xl font-semibold tracking-tight leading-tight reveal">
        Professional work, delivered with clarity and craft.
      </h1>

      <p class="mt-6 max-w-2xl text-lg text-white/75 reveal">
        We help teams ship modern brands, websites, products, and practical AI.
        Below is a curated view of what we typically deliver. Case studies can be shared on request.
      </p>

      <div class="mt-8 flex flex-wrap gap-3 reveal">
        <a
          href="mailto:contact@zenithdigital.me"
          class="rounded-full bg-white text-black px-5 py-2.5 text-sm font-medium hover:bg-white/90"
        >
          Request case studies
        </a>
        <a
          href="/services"
          class="rounded-full border border-white/15 px-5 py-2.5 text-sm font-medium text-white hover:border-white/30"
        >
          View services
        </a>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-6 py-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {projects.map((p, i) => (
        <article class="card reveal">
          <div class="thumb" aria-hidden="true">
            <!-- Abstract thumbnail (replace later with real image) -->
            <svg viewBox="0 0 800 480" xmlns="http://www.w3.org/2000/svg" class="h-full w-full">
              <defs>
                <linearGradient id={`g${i}`} x1="0" y1="0" x2="1" y2="1">
                  <stop offset="0" stop-color="white" stop-opacity="0.10" />
                  <stop offset="1" stop-color="white" stop-opacity="0.02" />
                </linearGradient>
              </defs>
              <rect x="0" y="0" width="800" height="480" rx="28" fill={`url(#g${i})`} />
              <path
                d="M40 340 C140 260, 240 420, 340 330 C440 240, 520 390, 620 300 C700 240, 740 260, 760 250"
                fill="none"
                stroke="rgba(255,255,255,0.16)"
                stroke-width="3"
              />
              <circle cx="140" cy="160" r="70" fill="rgba(255,255,255,0.06)" />
              <circle cx="610" cy="140" r="90" fill="rgba(255,255,255,0.04)" />
              <rect x="60" y="60" width="220" height="22" rx="11" fill="rgba(255,255,255,0.10)" />
              <rect x="60" y="96" width="320" height="16" rx="8" fill="rgba(255,255,255,0.06)" />
              <rect x="60" y="126" width="260" height="16" rx="8" fill="rgba(255,255,255,0.06)" />
            </svg>
          </div>

          <div class="p-6">
            <div class="flex items-center justify-between gap-4">
              <p class="text-xs tracking-[0.22em] uppercase text-white/60">{p.tag}</p>
              <span class="dot"></span>
            </div>

            <h2 class="mt-3 text-xl font-semibold tracking-tight">{p.title}</h2>
            <p class="mt-2 text-sm text-white/70">{p.description}</p>

            <ul class="mt-4 space-y-2 text-sm text-white/70">
              {p.outcomes.map((o) => (
                <li class="flex gap-2">
                  <span class="mt-[7px] h-1.5 w-1.5 rounded-full bg-white/30"></span>
                  <span>{o}</span>
                </li>
              ))}
            </ul>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-6 py-10">
    <div class="rounded-3xl border border-white/10 bg-white/5 p-8 md:p-10 reveal">
      <h2 class="text-2xl font-semibold tracking-tight">How we deliver</h2>
      <p class="mt-3 text-white/75 max-w-2xl">
        Minimal process, high clarity. We align on scope, ship in iterations, and launch with performance and quality.
      </p>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-white/70">
        <div class="rounded-2xl border border-white/10 p-5">
          <p class="text-white/90 font-medium">1) Align</p>
          <p class="mt-2">Goals, scope, timeline, success metrics.</p>
        </div>
        <div class="rounded-2xl border border-white/10 p-5">
          <p class="text-white/90 font-medium">2) Build</p>
          <p class="mt-2">Design + implementation with fast feedback.</p>
        </div>
        <div class="rounded-2xl border border-white/10 p-5">
          <p class="text-white/90 font-medium">3) Launch</p>
          <p class="mt-2">Ship, measure, refine.</p>
        </div>
      </div>

      <div class="mt-8">
        <a
          href="mailto:contact@zenithdigital.me"
          class="inline-flex rounded-full bg-white text-black px-5 py-2.5 text-sm font-medium hover:bg-white/90"
        >
          contact@zenithdigital.me
        </a>
      </div>
    </div>
  </section>

  <!-- Scroll reveal script -->
  <script>
    const els = document.querySelectorAll('.reveal');
    const io = new IntersectionObserver((entries) => {
      for (const e of entries) {
        if (e.isIntersecting) e.target.classList.add('in');
      }
    }, { threshold: 0.12 });
    els.forEach((el) => io.observe(el));
  </script>

  <style>
    .card {
      border: 1px solid rgba(255,255,255,0.10);
      border-radius: 1.25rem;
      overflow: hidden;
      background: rgba(255,255,255,0.02);
      transition: transform 220ms ease, border-color 220ms ease, background 220ms ease;
    }
    .card:hover {
      transform: translateY(-3px);
      border-color: rgba(255,255,255,0.18);
      background: rgba(255,255,255,0.03);
    }
    .thumb {
      height: 220px;
      border-bottom: 1px solid rgba(255,255,255,0.08);
      background: rgba(255,255,255,0.02);
    }
    .dot {
      height: 6px;
      width: 6px;
      border-radius: 999px;
      background: rgba(255,255,255,0.35);
      box-shadow: 0 0 0 6px rgba(255,255,255,0.06);
    }

    /* Reveal animation */
    .reveal {
      opacity: 0;
      transform: translateY(10px);
      transition: opacity 500ms ease, transform 500ms ease;
    }
    .reveal.in {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
</Layout>

